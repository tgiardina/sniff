{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6", "DOM"],
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types", "node_modules/web-ext-types"]
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.ts"],
  "declaration": true
}
